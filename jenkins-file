  	pipeline {
  	    // 1. Define where the pipeline will run
    agent any // 'any' means Jenkins can use any available agent
// 2. Group all the work into stages
stages {
    // 3. Define the first stage: Build
    stage('Build') {
        steps {
            // 4. Define the actions for this stage
            echo "This is the Build stage. I would run 'mvn clean install' here."
        }
    }

    // Define the second stage: Test
    stage('Test') {
        steps {
            echo "This is the Test stage. I would run 'mvn test' here."
        }
    }

    // Define the third stage: Code Quality
    stage('Code Quality') {
        steps {
            echo "This is the Quality stage. I would run a SonarQube scan here."
        }
    }

    // Define the fourth stage: Deploy
    stage('Deploy to Staging') {
        steps {
            echo "This is the Deploy stage. I would deploy my app to a staging server."
        }
    }
}
}
